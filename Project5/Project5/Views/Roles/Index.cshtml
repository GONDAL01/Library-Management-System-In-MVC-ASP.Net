@model IEnumerable<Project5.Models.Role>

@{
    ViewBag.Title = "Roles";
}

<style>
    .roles-heading {
        background-color: #007bff; /* Example background color */
        color: white; /* Text color */
        padding: 10px 0;
        border-radius: 5px;
        margin-bottom: 20px;
        text-align: center;
    }

    .table-custom {
        margin-top: 20px;
        border-collapse: collapse;
        width: 100%;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .table-custom th, .table-custom td {
            border: 1px solid #dee2e6;
            padding: 8px;
            text-align: left;
        }

        .table-custom th {
            background-color: #f8f9fa;
        }

    .btn-custom {
        display: inline-block;
        margin: 0 5px; /* Spacing between buttons */
        padding: 5px 15px; /* Padding for buttons */
    }
</style>

<div class="container">
    <div class="roles-heading">
        <h2>ROLES</h2>
    </div>
    <p class="text-center">
        <a href="@Url.Action("Create")" class="btn btn-primary btn-custom">ADD Role</a>
    </p>
    <table class="table-custom">
        <thead>
            <tr>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Rolename)</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.id })" class="btn btn-secondary btn-custom">Edit</a>
                        <a href="@Url.Action("Details", new { id = item.id })" class="btn btn-info btn-custom">Details</a>
                        <a href="@Url.Action("Delete", new { id = item.id })" class="btn btn-danger btn-custom">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
