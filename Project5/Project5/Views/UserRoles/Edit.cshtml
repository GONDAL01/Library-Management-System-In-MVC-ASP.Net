@model Project5.Models.UserRole

@{
    ViewBag.Title = "Edit User Role";
}

<style>
    .edit-role-heading {
        background-color: #007bff; /* Bootstrap primary color */
        color: white;
        padding: 10px 0;
        border-radius: 5px;
        margin-bottom: 20px;
        text-align: center;
    }

    .edit-role-container {
        border: 1px solid #dee2e6;
        border-radius: 0.25rem;
        background-color: #f8f9fa;
        padding: 20px;
        margin-top: 20px;
    }

    .btn-custom {
        width: auto; /* Adjust width as needed */
        margin-top: 10px;
        margin-bottom: 10px;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .form-control {
        display: block;
        width: 100%;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        line-height: 1.5;
        color: #495057;
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid #ced4da;
        border-radius: 0.25rem;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }
</style>

<div class="container mt-5">
    <h2 class="edit-role-heading">Edit User Role</h2>
    <div class="edit-role-container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.UserId, "User Name")
                @Html.DropDownList("UserId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.RoleId, "Role")
                @Html.DropDownList("RoleId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.RoleId, "", new { @class = "text-danger" })
            </div>

            <div class="text-center">
                <input type="submit" value="Save Changes" class="btn btn-primary btn-custom" />
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary btn-custom" })
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
