@model Project5.Models.UserRole

@{
    ViewBag.Title = "Unassign User Role";
}

<style>
    .unassign-role-container {
        border: 1px solid #dee2e6;
        border-radius: 0.25rem;
        background-color: #f8f9fa;
        padding: 20px;
        margin-top: 20px;
    }

    .btn-custom {
        width: auto;
        display: block;
        margin: 10px auto; /* Centers the button */
    }

    .unassign-role-heading {
        background-color: #007bff;
        color: white;
        padding: 10px 0;
        border-radius: 5px;
        margin-bottom: 20px;
    }
</style>

<div class="container mt-5">
    <h2 class="unassign-role-heading text-center">UNASSIGN USER ROLE</h2>
    <div class="unassign-role-container">
        <h3 class="text-center">Are you sure you want to delete this?</h3>
        <table class="table">
            <tr>
                <th>Role</th>
                <td>@Html.DisplayFor(model => model.Role.Rolename)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.User.Name)</th>
                <td>@Html.DisplayFor(model => model.User.Name)</td>
            </tr>
        </table>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="text-center">
                <input type="submit" value="Unassign Role" class="btn btn-danger btn-custom" />
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary btn-custom" })
            </div>
        }
    </div>
</div>
