@model Project5.Models.UserRole

@{
    ViewBag.Title = "Assign User Role";
}

<style>
    .assign-role-container {
        border: 1px solid #dee2e6;
        border-radius: 0.25rem;
        background-color: #f8f9fa;
        padding: 20px;
        margin-top: 20px;
    }

    .btn-custom {
        width: auto;
        display: block;
        margin: 10px 0; /* Adjust the margin as needed */
    }

    .assign-role-heading {
        background-color: #007bff;
        color: white;
        padding: 10px 0;
        border-radius: 5px;
        margin-bottom: 20px;
    }
</style>

<div class="container mt-5">
    <h2 class="assign-role-heading text-center">ASSIGN USER ROLE</h2>
    <div class="assign-role-container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(model => model.UserId, "User Name", new { @class = "control-label" })
                @Html.DropDownList("UserId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.RoleId, "Role", new { @class = "control-label" })
                @Html.DropDownList("RoleId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.RoleId, "", new { @class = "text-danger" })
            </div>

            <div class="text-center">
                <input type="submit" value="Assign Role" class="btn btn-primary btn-custom" />
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary btn-custom" })
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
