@model Project5.Models.Book

@{
    ViewBag.Title = "Book Details";
}

<style>
    .book-details-heading {
        background-color: #007bff; /* Example background color */
        color: white; /* Text color */
        padding: 10px 0;
        border-radius: 5px;
        margin-bottom: 20px;
        text-align: center;
    }

    .book-details-container {
        border: 1px solid #dee2e6;
        border-radius: 0.25rem;
        background-color: #f8f9fa;
        padding: 20px;
        margin-top: 20px;
    }

    .btn-custom {
        width: auto;
        display: block;
        margin: 10px auto;
    }
</style>

<div class="container">
    <div class="book-details-heading">
        <h2 class="mb-0">BOOK DETAILS</h2>
    </div>

    <div class="book-details-container">
        <dl class="dl-horizontal">
            <dt>Title:</dt>
            <dd>@Html.DisplayFor(model => model.Title)</dd>

            <dt>Author:</dt>
            <dd>@Html.DisplayFor(model => model.Author)</dd>

            <dt>Genre:</dt>
            <dd>@Html.DisplayFor(model => model.Genre)</dd>

            @if (User.IsInRole("Librarian") || User.IsInRole("Manager"))
            {
                <dt>Quantity:</dt>
                <dd>@Html.DisplayFor(model => model.Quantity)</dd>
            }
        </dl>

        <div class="text-center">
            @if (User.IsInRole("Librarian") || User.IsInRole("Manager"))
            {
                <a href="@Url.Action("Edit", "Books", new { id = Model.BookId })" class="btn btn-primary btn-custom">Edit</a>
            }
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary btn-custom" })
        </div>
    </div>
</div>
