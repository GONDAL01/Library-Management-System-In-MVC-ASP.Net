@model Project5.Models.Book

@{
    ViewBag.Title = "Delete Book";
}

<style>
    .delete-book-heading {
        background-color: #007bff; /* Example background color */
        color: white; /* Text color */
        padding: 10px 0;
        border-radius: 5px;
        margin-bottom: 20px;
        text-align: center;
    }

    .delete-book-container {
        border: 1px solid #dee2e6;
        border-radius: 0.25rem;
        background-color: #f8f9fa;
        padding: 20px;
        margin-top: 20px;
    }

    .btn-custom {
        width: auto;
        display: block;
        margin: 10px auto;
    }
</style>

<div class="container">
    <div class="delete-book-heading">
        <h2 class="mb-0">DELETE BOOK</h2>
    </div>

    <div class="delete-book-container">
        <h3 class="text-center mb-4">Are you sure you want to delete this book?</h3>

        <dl class="dl-horizontal">
            <dt>Title:</dt>
            <dd>@Html.DisplayFor(model => model.Title)</dd>

            <dt>Author:</dt>
            <dd>@Html.DisplayFor(model => model.Author)</dd>

            <dt>Genre:</dt>
            <dd>@Html.DisplayFor(model => model.Genre)</dd>

            <dt>Quantity:</dt>
            <dd>@Html.DisplayFor(model => model.Quantity)</dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="text-center">
                <input type="submit" value="Delete" class="btn btn-danger btn-custom" />
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary btn-custom" })
            </div>
        }
    </div>
</div>
