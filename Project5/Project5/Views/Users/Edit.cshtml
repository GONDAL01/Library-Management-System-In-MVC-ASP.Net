@model Project5.Models.User

@{
    ViewBag.Title = "Edit User Details";
}

<style>
    .edit-details-heading {
        background-color: #007bff; /* Example background color */
        color: white; /* Text color */
        padding: 10px 0;
        border-radius: 5px;
        margin-bottom: 20px;
    }

    .edit-details-container {
        border: 1px solid #dee2e6;
        border-radius: 0.25rem;
        background-color: #f8f9fa;
        padding: 20px;
        margin-top: 20px;
    }

        .edit-details-container th {
            width: 30%;
        }

        .edit-details-container td {
            width: 70%;
        }

    .btn-custom {
        width: auto; /* Adjust as necessary, auto will make it as wide as the text + padding */
        display: block; /* Makes it a block element */
        margin: 10px auto; /* Centers the button */
    }
</style>

<div class="container">
    <h2 class="edit-details-heading text-center">EDIT USER DETAILS</h2>
    <div class="edit-details-container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <table class="table">
                @Html.HiddenFor(model => model.UserId)
                <tbody>
                    <tr>
                        <th>@Html.LabelFor(model => model.Name)</th>
                        <td>@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })</td>
                    </tr>
                    <tr>
                        <th>@Html.LabelFor(model => model.DOB)</th>
                        <td>@Html.EditorFor(model => model.DOB, new { htmlAttributes = new { @class = "form-control", type = "date" } })</td>
                    </tr>
                    <tr>
                        <th>@Html.LabelFor(model => model.Email)</th>
                        <td>@Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })</td>
                    </tr>
                    <tr>
                        <th>@Html.LabelFor(model => model.PhoneNumber, "Contact Number")</th>
                        <td>@Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })</td>
                    </tr>
                    <tr>
                        <th>@Html.LabelFor(model => model.Address)</th>
                        <td>@Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })</td>
                    </tr>
                </tbody>
            </table>

            <div class="text-center">
                <input type="submit" value="Save Changes" class="btn btn-primary btn-custom" />
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary btn-custom" })
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
