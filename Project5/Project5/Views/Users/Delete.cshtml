@model Project5.Models.User

@{
    ViewBag.Title = "Delete User";
}

<style>
    .delete-user-container {
        border: 1px solid #dee2e6;
        border-radius: 0.25rem;
        background-color: #f8f9fa;
        padding: 20px;
        margin-top: 20px;
    }

        .delete-user-container th {
            width: 30%;
        }

        .delete-user-container td {
            width: 70%;
        }

    .btn-custom {
        width: 100%;
        margin-bottom: 10px;
    }
</style>

<div class="container mt-5">
    <div class="delete-user-container">
        <h2 class="text-center mb-4">DELETE USER</h2>
        <h3 class="text-center text-danger mb-4">Are you sure you want to delete this user?</h3>

        <table class="table">
            <tbody>
                <tr>
                    <th>Name:</th>
                    <td>@Html.DisplayFor(model => model.Name)</td>
                </tr>
                <tr>
                    <th>Date of Birth:</th>
                    <td>@Html.DisplayFor(model => model.DOB, "{0:yyyy-MM-dd}")</td>
                </tr>
                <tr>
                    <th>Email:</th>
                    <td>@Html.DisplayFor(model => model.Email)</td>
                </tr>
                <tr>
                    <th>Contact Number:</th>
                    <td>@Html.DisplayFor(model => model.PhoneNumber)</td>
                </tr>
                <tr>
                    <th>Address:</th>
                    <td>@Html.DisplayFor(model => model.Address)</td>
                </tr>
            </tbody>
        </table>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group text-center">
                <input type="submit" value="Confirm Delete" class="btn btn-danger btn-custom" />
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary btn-custom" })
            </div>
        }
    </div>
</div>
