@model IEnumerable<Project5.Models.User>

@{
    ViewBag.Title = "Users";
}

<style>
    .heading-color {
        background-color: #007bff; /* Bootstrap primary color */
        color: white;
        text-align: center;
        padding: 10px 0;
        border-radius: 5px;
        margin-bottom: 20px;
    }

    .table-custom {
        margin-top: 20px;
        border-collapse: collapse;
        width: 100%;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .table-custom th, .table-custom td {
            border: 1px solid #dee2e6;
            padding: 8px;
            text-align: left;
        }

        .table-custom th {
            background-color: #f8f9fa;
        }

    .btn-custom {
        display: inline-block;
        margin: 0 5px; /* Spacing between buttons */
    }
</style>

<div class="container">
    <div class="heading-color">
        <h2 class="mb-0">USERS</h2>
    </div>

    <p class="text-center">
        @Html.ActionLink("ADD User", "Create", null, new { @class = "btn btn-primary" })
    </p>

    <table class="table-custom">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>Contact Number</th>
            <th>@Html.DisplayNameFor(model => model.Address)</th>
            <th>Actions</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.UserId }, new { @class = "btn btn-info btn-custom" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.UserId }, new { @class = "btn btn-danger btn-custom" })
                </td>
            </tr>
        }
    </table>
</div>
