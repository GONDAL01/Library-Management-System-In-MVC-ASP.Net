    .table-custom {
        margin-top: 20px;
        width: 60%; /* Adjusted to match your books table */
        border-collapse: collapse;
        margin-left: auto;
        margin-right: auto;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Shadow for depth */
